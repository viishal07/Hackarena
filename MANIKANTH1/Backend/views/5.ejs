<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesticides</title>
    <link rel="stylesheet" href="css/5.css">
</head>
<body>
    <!-- header -->
    <!-- slider -->
    <div class="slider">
        <!-- list Items -->
        <div class="list">
            <% pesticides.forEach((pesticide, index) => { %>
                <div class="item <%= index === 0 ? 'active' : '' %>">
                    <img src="<%= pesticide.image || '/default-image.jpg' %>">
                    <div class="content">
                        <p><%= pesticide.disease %></p>
                        <h2><%= pesticide.name %></h2>
                        <p><%= pesticide.diseaseDescription %></p>
                    </div>
                </div>
            <% }); %>
        </div>
        <!-- button arrows -->
        <div class="arrows">
            <button id="prev"><</button>
            <button id="next">></button>
        </div>
        <!-- thumbnail -->
        <div class="thumbnail">
            <% pesticides.forEach((pesticide, index) => { %>
                <div class="item <%= index === 0 ? 'active' : '' %>">
                    <img src="<%= pesticide.image || '/default-image.jpg' %>">
                    <div class="content">
                        <%= pesticide.name %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="/js/5.js"></script>
</body>
</html>